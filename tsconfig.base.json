{
    "compilerOptions": {
      "rootDir": ".",
      "target": "ES2019",
      "module": "esnext",
      "moduleResolution": "node",
      "lib": ["ES2019", "dom"],
      "sourceMap": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "pretty": true,
      "typeRoots": ["node_modules/@types", "./typings"],
      "baseUrl": "."
    },
    "exclude": ["node_modules"]
  }
  